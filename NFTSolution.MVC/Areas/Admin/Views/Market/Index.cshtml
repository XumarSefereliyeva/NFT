@using NFTSolution.DAL.Models
@model List<Market>
<!-- Table Start -->
<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-sm-12 col-xl-6">
            <div class="bg-secondary rounded h-100 p-4">
                <h6 class="mb-4">Basic Table</h6>
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Name</th>
                            <th scope="col">Count</th>
                            <th scope="col">Category</th>
                            <th scope="col">ImgUrl</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Market item in Model)
                        {
                            <tr>
                                <th scope="row">@item.Id</th>
                                <td>@item.Name</td>
                                <td>@item.Count</td>
                                <td>@item.Category</td>
                                <td><img src="~/assets/Uploadedimages/@item.ImgUrl"/></td>

                                <td><a asp-controller="Market" asp-action="Info" asp-route-id="@item.Id" type="summit" class="btn btn-primary">Info</a></td>
                                <td><a asp-controller="Market" asp-action="Update" asp-route-id="@item.Id" type="summit" class="btn-primary">Update</a></td>
                                <td><a asp-controller="Market" asp-action="Delete" asp-route-id="@item.Id" type="summit" class="btn-primary">Delete</a></td>
                            </tr>
                        }
                        <a  asp-controller="Market" asp-action="Create" type="summit" class="btn-primary" >Create</a>

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<!-- Table End -->
